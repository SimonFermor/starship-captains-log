<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

<% include ../partials/nav.ejs %>

<div class="container">

<h2>Captain Arthur's Starship Log</h2>

<div class="table-responsive">

<table class="table">

<thead>
	<th>Earthdate</th>
	<th>Title</th>
	<th>Summary</th>
	<th colspan="2">Note</th>
</thead>

<tbody>
<% note_rows.forEach(function(r) { %>
	<tr>
  	<td><%= dateFormat(r.created_at) %></td>
  	<td><%= r.title %></td>
  	<td><%= r.summary %></td>
  	<td><% if (r.note) { %><%= r.note.substr(0,50) %>
			<% if (r.note.length > 50) { %>
				<%= '...' %>
			<% } %>
		<% } %>
	</td>
  	<td><a href='/one_note/<%= r.note_id %>'"><span class="glyphicon glyphicon-fullscreen"></span> </a></td>
	</tr>
<% }); %>

